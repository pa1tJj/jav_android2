<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rbtNam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab1.MayTinhBoTui.ManHinhMayTinh"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPhepTinh"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:id="@+id/btAC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:text="AC"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/btDEL"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:text="DEL"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/btPhanTram"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:text="%"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/btThuong"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="40sp"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btTich"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="40sp"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btHieu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btCong"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="40sp"
            android:textColor="#4CAF50"/>

        <Button
            android:id="@+id/btNgoacAm"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:text="+/-"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btPhay"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:text=","
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btDauBang"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#4CAF50"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="40sp"
            android:textColor="@color/white"/>

    </GridLayout>

</LinearLayout>
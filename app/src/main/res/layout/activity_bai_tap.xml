        android:textStyle="bold"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btLab4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/bck"
        android:text="Lab 4"
        android:textStyle="bold"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btLab5"
        android:layout_width="100dp"
